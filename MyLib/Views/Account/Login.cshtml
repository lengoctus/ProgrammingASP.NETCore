@model AccountView

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container contain-login" style="margin-top:3%; margin-bottom:10%">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/" method="post">
                <h3 style="text-align:center">Customer Login</h3>

                <div class="form-customer">
                    <label id="email"><b>Email:</b></label>
                    <input type="text" class="form-control" placeholder="Enter your Email" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-customer">
                    <label id="password"><b>Password:</b></label>
                    <input type="password" class="form-control" placeholder="Enter your Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-customer" style="margin-top:7%">
                    <input type="submit" class="form-control btn btn-success" value="Login" />
                </div>
                <div style="margin-top:7%">
                    <a asp-controller="Account" asp-action="Register">Create Account</a>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>